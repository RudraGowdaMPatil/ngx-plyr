{
  "name": "ngx-plyr-app",
  "version": "16.2.12",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build:app": "ng build --configuration production && cp dist/ngx-plyr-app/index.html dist/ngx-plyr-app/404.html",
    "build:lib": "ng build ngx-plyr --configuration production && cp README.md dist/ngx-plyr && cp LICENSE.md dist/ngx-plyr",
    "test:app": "ng test ngx-plyr-app",
    "test:app:ci": "ng test ngx-plyr-app --watch=false --progress=false --browsers=ChromeHeadlessCI",
    "test:lib": "ng test ngx-plyr",
    "test:lib:ci": "ng test ngx-plyr --watch=false --progress=false --browsers=ChromeHeadlessCI --code-coverage",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "npm-pack": "cd dist/ngx-plyr && npm pack",
    "package": "npm run build:lib && npm run npm-pack",
    "publish": "npm publish dist/ngx-plyr --access public",
    "version-major": "cd projects/ngx-plyr && npm version major && cd ../.. && git add . && git commit -m \"updating lib version\" && npm version major",
    "version-minor": "cd projects/ngx-plyr && npm version minor && cd ../.. && git add . && git commit -m \"updating lib version\" && npm version minor",
    "version-patch": "cd projects/ngx-plyr && npm version patch && cd ../.. && git add . && git commit -m \"updating lib version\" && npm version patch"
  },
  "private": false,
  "dependencies": {
    "@angular/animations": "^17.3.4",
    "@angular/cdk": "^17.3.4",
    "@angular/common": "^17.3.4",
    "@angular/compiler": "^17.3.4",
    "@angular/core": "^17.3.4",
    "@angular/forms": "^17.3.4",
    "@angular/material": "^17.3.4",
    "@angular/platform-browser": "^17.3.4",
    "@angular/platform-browser-dynamic": "^17.3.4",
    "@angular/router": "^17.3.4",
    "@types/hls.js": "^0.12.4",
    "core-js": "^2.6.9",
    "dashjs": "^4.7.4",
    "hls.js": "^1.5.8",
    "plyr": "^3.7.8",
    "rxjs": "~6.5.4",
    "tslib": "^2.6.2",
    "zone.js": "~0.14.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.3.4",
    "@angular-eslint/builder": "17.3.0",
    "@angular-eslint/eslint-plugin": "17.3.0",
    "@angular-eslint/eslint-plugin-template": "17.3.0",
    "@angular-eslint/schematics": "17.3.0",
    "@angular-eslint/template-parser": "17.3.0",
    "@angular/cli": "^17.3.4",
    "@angular/compiler-cli": "^17.3.4",
    "@angular/language-service": "^17.3.4",
    "@types/jasmine": "^3.3.14",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.11.1",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint": "^8.57.0",
    "jasmine-core": "~3.8.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage": "^2.2.1",
    "karma-coverage-istanbul-reporter": "^2.0.6",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.5.0",
    "ng-packagr": "^17.3.0",
    "ts-node": "~7.0.0",
    "typescript": "^5.4.5"
  }
}
